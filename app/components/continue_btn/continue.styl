.continue_btn-wrap
  display flex
  height 4.75rem
  position fixed
  max-width 640px
  margin 0 auto
  bottom 0
  width 100%
  align-items center
  padding 0 1.125rem
  justify-content center
  box-shadow 0 0 12px 0 rgba(41, 41, 204, 0.2)
  background-color var(--white-color)
  button
    background transparent linear-gradient(0deg, #591EC0 0%, #6623DB 25%, #7D3EE8 48%, #BE95FF 100%) 0% 0% no-repeat padding-box
    width 100%
    padding 0
    outline none
    text-transform uppercase
    height 3.25rem
    border none
    border-radius 3rem
    color var(--white-color)
    font-size 1rem
    font-weight 500