.greeting
  width 100%
  display flex
  flex-direction column
  align-items center
  flex-grow 1
  .hand
    animation greeting 1.5s forwards
    animation-delay 1s
  .common_container
    opacity 0
    animation common_container 0.5s forwards
    animation-delay 2s
    .greeting_subtitle
      font-size 1rem
      text-align: center
      width 70%
      margin 0 auto
      color var(--main-lite-color)
    .btn_section
      display flex
      flex-direction column
      padding 3.5rem 1.25rem 0
      button, .fill_in_button
        outline none
        display flex
        align-items center
        justify-content center
        margin-bottom 1rem
        text-decoration none
        font-size 1rem
        border none
        position relative
        font-weight 500
        border-radius 3rem
        height 3.25rem
        img
          -moz-margin-end 0.5rem
          -webkit-margin-end 0.5rem
          margin-inline-end 0.5rem
      button:before, .fill_in_button:before
        content: ''
        position absolute
        display flex
        bottom 0
        width 100%
        height 1rem
        -webkit-filter blur(20px)
        filter blur(20px)
        opacity 0.5
        border-radius: 3rem;
      .fb_button
        color var(--fb-btn-color)
        background-image linear-gradient(to bottom, #ffffff 18%, #deedff)
      .fb_button:before
        background-color: #3482e3;
      .fill_in_button
        color var(--dark-color)
        background-image linear-gradient(to bottom, #ffffff 18%, #e6dffc)
      .fill_in_button:before
        background-color: #6334e3;
      .error_btn
        border 2px solid var(--active-color)
        animation errorBtn 0.5s forwards
        animation-delay 1s 

@keyframes errorBtn
  100%
    opacity 0
    pointer-events none
@keyframes greeting
  0%
    transform translate(50%, 50%)
    opacity 1
  40%
    transform translate(0%, 0%)
    opacity 1
  50%
    opacity 1
    transform translate(0%, 0%)
  75%
    opacity 1
    transform translate(0%, 0%) rotate(25deg)
  100%
    opacity 1
    transform translate(0%, 0%) rotate(0)
@keyframes common_container
  100%
    opacity 1