.greeting
  display flex
  flex-direction column
  align-items center
  background-color var(--sec-color)
  flex-grow 1
  .window_halper
    display flex
    flex-direction column
    align-items center
    padding-top 4.8rem
    overflow hidden
    width 9rem
    border-radius 0 0 100% 100%
    .window
      width 7.5rem
      height 7.5rem
      border-radius 50%
      position relative
    .window:before
      content: ''
      opacity 0.35
      width 7.5rem
      height 7.5rem
      border-radius 50%
      background-image linear-gradient(to bottom, #f0e8ff, #b195ed 47%, #875de1 70%, #361181)
      position absolute
      top 0
      left 0
    .hand
      position absolute
      bottom: -130%
      left -35%
      height 20.5rem
      z-index 1
      opacity 0
      animation greeting 1.5s forwards
      animation-delay 1s
  .greeting_text
    font-size 1.5rem
    opacity 0
    font-weight bold
    animation greeting_text 0.5s forwards
    animation-delay 1s
  .common_container
    opacity 0
    animation common_container 0.5s forwards
    animation-delay 2s
    .greeting_subtitle
      font-size 1rem
      text-align: center
      width 70%
      margin 0 auto
      color var(--main-lite-color)
    .btn_section
      display flex
      flex-direction column
      padding 3.5rem 1.25rem 0
      button, .fill_in_button
        outline none
        display flex
        align-items center
        justify-content center
        margin-bottom 1rem
        text-decoration none
        border none
        font-size 1rem
        position relative
        font-weight 500
        border-radius 3rem
        height 3.25rem
        img
          -moz-margin-end 0.5rem
          -webkit-margin-end 0.5rem
          margin-inline-end 0.5rem
      button:before, .fill_in_button:before
        content: ''
        position absolute
        display flex
        bottom 0
        width 100%
        height 1rem
        -webkit-filter blur(20px)
        filter blur(20px)
        opacity 0.5
        border-radius: 3rem;
      .fb_button
        color var(--fb-btn-color)
        background-image linear-gradient(to bottom, #ffffff 18%, #deedff)
      .fb_button:before
        background-color: #3482e3;
      .fill_in_button
        color var(--dark-color)
        background-image linear-gradient(to bottom, #ffffff 18%, #e6dffc)
      .fill_in_button:before
        background-color: #6334e3;

@keyframes greeting
  0%
    transform translate(50%, 50%)
    opacity 1
  40%
    transform translate(0%, 0%)
    opacity 1
  50%
    opacity 1
    transform translate(0%, 0%)
  75%
    opacity 1
    transform translate(0%, 0%) rotate(25deg)
  100%
    opacity 1
    transform translate(0%, 0%) rotate(0)
@keyframes greeting_text
  0%
    transform scale(0)
  100%
    opacity 1
    transform scale(1)
@keyframes common_container
  100%
    opacity 1