#other_data
  width 100%
  flex-grow 1
  margin-bottom 5rem
  h3
    margin 0
  .gender_strip
    padding 1rem
    .gender_items
      padding-top 0.75rem
    .gender_items
      display flex
      justify-content space-between
  
  .checkbox_container
    padding-top 4rem
    -moz-padding-start 0.75rem
    -webkit-padding-start 0.75rem
    padding-inline-start 0.75rem
    position relative
    .shared_checkbox
      animation chekbox_animation 2.3s
      animation-delay 0.3s
    .recommend_hand
      position absolute
      top -170%
      width 15rem
      opacity 0
      height 17.3rem
    .ok_hand
      position absolute
      top 100%
      width 13.875rem
      opacity 0
      height 11.125rem
    .shared_checkbox_label
      width 80%
@keyframes recommend_hand_ltr
  0%
    opacity 1
    transform translate(100%, -50%) scale(0.7)
  45%
    opacity 1
    transform translate(0%, 0%) scale(1)
  55%
    opacity 1
    transform translate(0%, 0%) scale(1)
  99%
    opacity 0
    transform translate(100%, -50%) scale(0.7)
  100%
    opacity 0
@keyframes recommend_hand_rtl
  0%
    opacity 1
    transform translate(-100%, -50%) scale(-1, 0.7)
  45%
    opacity 1
    transform translate(0%, 0%) scale(-1, 1)
  55%
    opacity 1
    transform translate(0%, 0%) scale(-1, 1)
  99%
    opacity 0
    transform translate(-100%, -50%) scale(-1, 0.7)
  100%
    opacity 0
@keyframes ok_hand_ltr
  0%
    opacity 1
    transform translate(100%, 30%) scale(0.7)
  45%
    opacity 1
    transform translate(0%, 0%) scale(1)
  55%
    opacity 1
    transform translate(0%, 0%) scale(1)
  99%
    opacity 0
    transform translate(100%, 30%) scale(0.7)
  100%
    opacity 0
@keyframes ok_hand_rtl
  0%
    opacity 1
    transform translate(-100%, -30%) scale(-1, 0.7)
  45%
    opacity 1
    transform translate(0%, 0%) scale(-1, 1)
  55%
    opacity 1
    transform translate(0%, 0%) scale(-1, 1)
  99%
    opacity 0
    transform translate(-100%, -30%) scale(-1, 0.7)
  100%
    opacity 0
@keyframes chekbox_animation
  0%
    transform scale(1)
  45%
    transform scale(1.3)
  55%
    transform  scale(1.3)
  100%
    transform scale(1)
body[style='direction: ltr;']
  #other_data
    .checkbox_container
      .recommend_hand
        right 0%
        animation recommend_hand_ltr 2.3s forwards
        animation-delay 0.3s
      .ok_hand
        right 0%
        animation ok_hand_ltr 2.3s forwards
        animation-delay 0.3s
body[style='direction: rtl;']
  #other_data
    .checkbox_container
      .recommend_hand
        left 0%
        animation recommend_hand_rtl 2.3s forwards
        animation-delay 0.3s
      .ok_hand
        left 0%
        animation ok_hand_rtl 2.3s forwards
        animation-delay 0.3s