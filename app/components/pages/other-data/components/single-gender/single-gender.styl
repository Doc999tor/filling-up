.gender_item
    display flex
    flex-direction column
    align-items center
    justify-content space-between
    border-radius 1rem
    background-color var(--sec-color)
    border 1px solid var(--white-color)
    width 28%
    padding 1.125rem 0 1rem
    p
      margin 0
      font-size 0.875
      color var(--main-lite-color)
      padding-bottom 0.2rem
  .avatar_wrap
    width 3.375rem
    height 3.375rem
    display flex
    align-items center
    border-radius 50%
    justify-content center
    background-color var(--white-color)
  .select
    width 1.125rem
    height 1.125rem
    border solid 1px #c5cee0
    border-radius 50%
    background-color var(--white-color)
  .type_wrap
    display flex
    flex-direction column
    align-items center
    padding-top 1.875rem
