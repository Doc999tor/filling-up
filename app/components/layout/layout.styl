.layout
  display flex
  flex-direction column
  padding-top 3.5rem
  max-width 640px
  min-height 100vh
  overflow hidden
  -webkit-box-shadow 0px 0px 6px 0px rgba(94, 54, 177, 0.75)
  -moz-box-shadow 0px 0px 6px 0px rgba(94, 54, 177, 0.75)
  box-shadow 0px 0px 6px 0px rgba(94, 54, 177, 0.75)
  background-color var(--sec-color)
  margin 0 auto
  header
    background-image linear-gradient(107deg, #9370e6 3%, #7534f8 40%, #4f2da7 87%)
    display flex
    height 3.5rem
    position fixed
    max-width 640px
    margin 0 auto
    top 0
    width 100%
    align-items center
    justify-content center
    img
      width 2rem
      height 3rem
      -moz-margin-end 0.5rem
      -webkit-margin-end 0.5rem
      margin-inline-end 0.5rem
    h2
      margin 0
      color var(--white-color)
      font-size 1.25rem
      font-weight 500
  .main-container
    display flex
    flex-direction column
    align-items center
    flex-grow 1