@import 'variables.css';
*
  box-sizing border-box
body
  font-family var(--font-family)
  font-size 14px
  line-height 1.42857143
  color var(--main-color)
  background-color #fff
  margin 0
#root
  display flex
  flex-direction column
  max-width 640px
  min-height 100vh
  overflow hidden
  -webkit-box-shadow 0px 0px 6px 0px rgba(94, 54, 177, 0.75)
  -moz-box-shadow 0px 0px 6px 0px rgba(94, 54, 177, 0.75)
  box-shadow 0px 0px 6px 0px rgba(94, 54, 177, 0.75)
  background-color var(--sec-color)
  margin 0 auto
h1, p
  margin 0
input
  outline none
.hidden, #hidden
  display none
.bullets
  margin 0 auto
  width 48px
  padding-top 10px
  .bullet
    width 10px
    height 10px
    border-radius 50%
    background-color grey
    display inline-block
    margin 0 1px
  .active
    background-color red
